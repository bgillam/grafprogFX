<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Text?>
<?import javafx.embed.swing.SwingNode?>
<BorderPane fx:controller="GrafMainController"
            xmlns:fx="http://javafx.com/fxml" >
    <top>
        <HBox>
            <VBox>
                <MenuBar fx:id="mainMenu" onKeyPressed="#onMenuChoice">
                    <Menu fx:id="fileMenu" text="File">
                        <MenuItem fx:id="newItem" text="New" onAction="#fileNew"/>
                        <MenuItem fx:id="openItem" text="Open"/>
                        <MenuItem fx:id="importItem" text="Import"/>
                        <SeparatorMenuItem/>
                        <MenuItem fx:id="saveItem" text="Save"/>
                        <MenuItem fx:id="saveAsItem" text="Save As"/>
                        <MenuItem fx:id="saveImageItem" text="Save Image"/>
                        <SeparatorMenuItem/>
                        <MenuItem fx:id="printItem" text="Print"/>
                        <SeparatorMenuItem/>
                        <MenuItem fx:id="exitItem" text="Exit"/>
                    </Menu>
                    <Menu fx:id="editMenu" text="Edit">
                        <MenuItem fx:id="cutItem" text="Cut"/>
                        <MenuItem fx:id="copyItem" text="Copy"/>
                        <MenuItem fx:id="pasteItem" text="Paste"/>
                    </Menu>
                    <Menu fx:id="functionMenu" text="Function">
                        <MenuItem fx:id="fxInputItem" text="Input" onAction="#fxInput"/>
                        <SeparatorMenuItem/>
                        <MenuItem fx:id="valueItem" text="Value"/>
                        <MenuItem fx:id="tangentItem" text="Tangent"/>
                        <MenuItem fx:id="chordItem" text="Chord"/>
                        <MenuItem fx:id="zerosItem" text="Zeros"/>
                        <SeparatorMenuItem/>
                        <MenuItem fx:id="integrateIetm" text="Integrate"/>
                    </Menu>
                    <Menu fx:id="statMenu" text="Stats">
                        <MenuItem fx:id="dataItem" text="Data"/>
                        <SeparatorMenuItem/>
                        <MenuItem fx:id="oneVarStatsItem" text="One Variable Stats"/>
                        <MenuItem fx:id="freqTableItem" text="Freq. Distr. Table"/>
                        <SeparatorMenuItem/>
                        <MenuItem fx:id="columnPloteItem" text="Column Plot"/>
                        <MenuItem fx:id="boxplotItem" text="Boxplot"/>

                        <MenuItem fx:id="histoItemItem" text="Histogram"/>
                        <MenuItem fx:id="freqPloyItem" text="Frequency Polygon"/>
                        <MenuItem fx:id="ogiveItem" text="Ogive"/>
                        <SeparatorMenuItem/>
                        <MenuItem fx:id="scatterItem" text="Scatter Plot"/>
                        <MenuItem fx:id="regressItem" text="Regression"/>
                        <SeparatorMenuItem/>
                        <CheckMenuItem fx:id="yAxisItem" text="Graph on Y-Axis"/>
                    </Menu>
                    <Menu fx:id="shapeMenu" text="Shape">
                        <MenuItem fx:id="pointItem" text="Point"/>
                        <MenuItem fx:id="lineItem" text="Line Segment"/>
                        <MenuItem fx:id="rectangleItem" text="Rectangle"/>
                        <MenuItem fx:id="ellipseItem" text="Ellipse"/>
                        <MenuItem fx:id="circleItem" text="Circle"/>
                        <SeparatorMenuItem/>
                        <MenuItem fx:id="textItem" text="Text"/>
                    </Menu>
                    <Menu fx:id="windowMenu" text="Window">
                        <MenuItem fx:id="setItem" text="Set"/>
                        <MenuItem fx:id="autoItem" text="Auto"/>
                        <MenuItem fx:id="standardItem" text="Standard"/>
                        <SeparatorMenuItem/>
                        <CheckMenuItem fx:id="hideXScaleItem" text="Hide X Scale"/>
                        <CheckMenuItem fx:id="hideYScaleItem" text="Hide y Scale"/>
                        <CheckMenuItem fx:id="hideXAxisItem" text="Hide X Axis"/>
                        <CheckMenuItem fx:id="hideYAxixItem" text="Hide Y Axis"/>
                        <CheckMenuItem fx:id="leftITem" text="Left"/>
                    </Menu>
                    <Menu fx:id="helpMenu" text="Help">
                        <MenuItem fx:id="aboutItem" text="About"/>
                        <MenuItem fx:id="calcItem" text="Calculator" onAction = "#showCalc"/>
                        <SeparatorMenuItem/>
                        <CheckMenuItem fx:id="toolItem" text="Toolbar"/>
                    </Menu>

                </MenuBar>
            </VBox>
        </HBox>
    </top>
    <center>

            <Pane fx:id="grafPane" />

    </center>
    <bottom>

               <VBox>
                   <Separator orientation="HORIZONTAL"/>
                   <Text text="Messages:" />
                   <Text text="     "/>

                   <BorderPane>
                       <left><Label fx:id="message1" text =  "message 1 " /></left>
                       <center><Label fx:id="message2" text= "message 2 "  /></center>
                       <right><Label fx:id ="message3" text= "message 3 "/></right>
                   </BorderPane>
               </VBox>


    </bottom>

</BorderPane>
